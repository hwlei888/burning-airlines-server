
<div class = "beCenter">
<div class="flights" id="new_flight_form">
    <% if @flight != nil %>
        <% if @flight.errors.any? %>
            <strong>Please corrrect the following:</strong>
            <ul>
                <% @flight.errors.full_messages.each do |e| %>
                    <li><%= e %></li>

                <% end %>
            </ul>

        <% end  %>
    <% end   %>
</div>

<div class = "beCenter">
    <%= form_with model: @flight, local: true do |f| %>

        
        <%= f.date_field :date %>
        <br><br>
        
        <%= f.text_field :origin, placeholder:'Enter Origin' %>
        <br><br>
        
        <%= f.text_field :destination, placeholder:'Enter Destination' %>
        <br><br>
        
        <%= f.label :flight_number, 'FlightNumber'  %>
        <br>
        <%= f.number_field :flight_number %>
        <br><br>

        <%= f.submit class:"button"%>
    <% end %>
</div>
</div>