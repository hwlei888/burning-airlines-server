
<div class = "beCenter">
<h2>All Reservations</h2>
</div>

<div class = "beCenter">
<% if @current_user.present? %>
    <%= link_to 'New Reservations', new_reservation_path %>
<% end %>
</div>

<% @reservations.each do |r|  %> 
<div class = "beCenter">
    <p><%= r.row %> <%= r.column %>
</div>

<div class = "beCenter">
    <p>Booked by <%= r.user.name %></p>
</div>
<div class = "beCenter">
    <p>For flight <%= r.flight.origin%> >> <%= r.flight.destination %></p>
    <p>on <%=r.flight.date %></p>
</div>
<div class = "beCenter">
    <p>flying by <%= r.flight.airplane.name%></p>
</div>

<hr>


<% end %>

<%= @allDate %>
